{
    "version": 1,
    "phases": {
        "install": {
            "commands": [
                "pip install --upgrade pip",
                "pip install -r requirements.txt"
            ]
        },
        "start": {
            "commands": [
                "uvicorn main:app --host 0.0.0.0 --port 8000"
            ]
        }
    },
    "variables": {
        "PORT": "8000"
    }
}
